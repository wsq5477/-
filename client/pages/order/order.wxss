/* pages/order/order.wxss */
.orderCard{
  display:flex;
  position:relative;
  top:-170rpx;
  margin-left:30rpx;
}
.line-back{
  width:21rpx;
  height:34rpx;
  margin-right:10rpx;
}
.ordered{
  font-size: 24rpx;
  line-height: 33rpx;
  color: rgba(52, 55, 61, 0.8);
}
.order{
  position: relative;
  top:-150rpx;
   background: #fff;
   border-radius: 13rpx;
   box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
   margin:0rpx 30rpx 30rpx 30rpx;
}
.orderList{
  display:flex;
  align-items: center;
  border-bottom:1px solid rgba(151, 151, 151, 0.2);
  margin:0rpx 30rpx;
}
.orderList:last-child{
  border-bottom:none;
}
.order-image{
  width:200rpx;
  height:200rpx;
  margin:20rpx 20rpx 20rpx 0rpx;
}
.order-product{
  margin-top:-80rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  box-sizing: border-box;
  width:300rpx;
}
.order-name{
   color: rgba(29, 29, 38, 0.8);
}
.order-price{
  margin-top: 12rpx;
  font-weight: bold;
}
.evoluate{
   background:#F5E069;
   height:52rpx;
   line-height:52rpx;
   font-size:28rpx;
   text-align:center;
   width:115rpx;
   padding:0rpx 25rpx;
}
.evoluate-number{
  font-size:28rpx;
  font-weight: bold;
  text-align: right;
  padding-top:90rpx;
}
.order-empty{
   background:#fff;
   position:relative;
   top:-150rpx;
   box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
   border-radius:13rpx;
   display: flex;
   flex-direction:column;
   justify-content: center;
   align-items: center;
   height:431rpx;
   margin:0rpx 30rpx;
}
.empty-image{
  width:80rpx;
  height:80rpx;
}
.empty-text{
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(139, 139, 139, 0.8);
}